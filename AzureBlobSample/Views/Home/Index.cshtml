@model AzureBlobSample.Controllers.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-4">
        <p>Upload Image To Azure Blob</p>
        <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Post">
            <div class="form-group">
                <div class="col-md-10">
                    <input asp-for="FormFile" accept="image/*" />
                </div>
            </div>
            <div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Upload" />
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <p>Last Uploaded Image</p>
        @if (!String.IsNullOrWhiteSpace(Model.LastSavedImageUrl))
        {
            <div>
                <img class="img-fluid" src="@Model.LastSavedImageUrl"/>
            </div>
        }
    </div>
    <div class="col-md-4">
        <p>Delete a Blob Container</p>
        <form method="post" asp-controller="Home" asp-action="DeleteBlob">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Blob Container Reference:</p>
                    <input class="form-control" asp-for="BlobContainerReference"/>
                </div>
            </div>
            <div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Delete"/>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>








